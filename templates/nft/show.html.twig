{% extends 'basefront.html.twig' %}

{% block title %}NFT{% endblock %}

{% block content %}
    <div class="container-xxl flex-grow-1 container-p-y">
        <!-- Parallax container with news header -->
        <div class="parallax">
            <h3 class="news-header"> NFT </h3>
            
        </div>
        
<style>
    .parallax {
        background-size: cover;
        background-position: center;
        color: #fff;
        text-align: center;
        padding: 2px 0; /* Adjust padding as needed */
    }
    
    .news-header {
        font-size: 42px;
        font-weight: 800;
        margin-bottom: 10px;
        text-transform: uppercase;
        letter-spacing: 2px;
        animation: glow 2s infinite alternate; /* Add glowing animation */
    }
    
    @keyframes glow {
        from {
            text-shadow: 0 0 10px rgba(34, 60, 156, 0.8), 0 0 20px rgba(75, 0, 203, 0.8); /* Initial shadow */
        }
        to {
            text-shadow: 0 0 20px rgba(41, 87, 186, 0.8), 0 0 40px rgba(67, 85, 179, 0.8), 0 0 60px rgba(255, 255, 255, 0.8); /* Glowing effect */
        }
    }
    
    
    .news-subheader {
        font-size: 13px;
        font-style: italic;
        margin-top: 5px;
        line-height: 1.4; /* Adjust line height for better spacing */
    }
    
    
</style>        

        <div class="rn-collection-area rn-section-gapTop">
        <div class="container">
            <div class="row g-5">

 {% for nft in pagination %}
            

 
  
                <!-- start single collention -->
                <div data-sal="slide-up" data-sal-delay="550" data-sal-duration="800" class="col-lg-4 col-xl-3 col-md-6 col-sm-6 col-12">
                    <a href="{{ path('app_nft_index', {'id': nft.id}) }}" class="rn-collection-inner-one">
                        <div class="collection-wrapper">
                            <div class="collection-big-thumbnail">
                                <img src="{{ asset('uploads/photos/' ~ nft.image) }}" style="max-height:230px;" alt="Nft_Profile">
                            </div>
                            <div class="collection-deg">
                                <h6 class="title">{{ nft.name }}</h6>
                                <span class="items">{{ nft.price }}</span>
                                
                            </div>
                            <span> {{ nft.CreationDate ? nft.CreationDate|date('Y-m-d H:i:s') : '' }}</span>
                                <span> {{ nft.status }} </span>
                        </div>
                    </a>
                </div>
                <!-- End single collention -->
                 {% endfor %}
            </div>

  <div class="pagination" style="display: flex;
  align-items: center;
  justify-content: center;">
            <div class="row">
                <div class="col-lg-12" data-sal="slide-up" data-sal-delay="550" data-sal-duration="800">
                    <nav class="pagination-wrapper" aria-label="Page navigation example">
                        <ul class="pagination">
                          <li class="page-item" style="display: flex;
  align-items: center;
  justify-content: center;"><a class="page-link active" {{ knp_pagination_render(pagination) }} </li> 
                        </ul>
                    </nav>
                </div>
                 
            </div>
        </div>
    </div>

  

{% endblock %}

